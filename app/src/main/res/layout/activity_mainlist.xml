<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im1"
    android:orientation="vertical">


    <Button
        android:id="@+id/create"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt"
        android:onClick="onClick" />

    <TextView
        android:id="@+id/procura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:text="procura homies"
        android:textAlignment="center"
        android:textColor="#a6363739"
        android:textSize="23sp"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/div" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="0dp"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:text="faculdade:"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:textColor="#cd949393"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/edit_color2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="0dp"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:text="curso:"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="130dp"
        android:textColor="#cd949393"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/edit_color2" />

    <Button
        android:id="@+id/search"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/b1"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:onClick="onClick"
        android:text="Pesquisar"
        android:textAllCaps="false"
        android:textColor="#da3e3f40"
        android:textSize="17sp" />

    <Button
        android:id="@+id/searchall"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/b1"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:onClick="onClick"
        android:text="Pesquisar todos"
        android:textAllCaps="false"
        android:textColor="#da3e3f40"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/div" />


    <Button
        android:id="@+id/signoutButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/b1"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:onClick="onClick"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="#999999"
        android:textSize="17sp" />

</LinearLayout>


