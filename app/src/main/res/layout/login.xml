<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/im1"
    tools:context="c.e.dingo.find.Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/findhomies"
        app:srcCompat="@drawable/text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:fontFamily="@font/futuralt"
        android:text="email"
        android:textIsSelectable="false"
        android:textColor="#2b2b2b"
        android:textSize="25sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:background="@drawable/edit_color2"
        android:ems="10"
        android:inputType="textPersonName"
        android:radius="35dp"
        android:layout_marginBottom="20dp"
        android:textColor="#706f6f" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:fontFamily="@font/futuralt"
        android:text="password"
        android:textColor="#2b2b2b"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_color2"
        android:ems="10"
        android:layout_marginLeft="45dp"
        android:inputType="textPassword"
        android:textColor="#706f6f" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="38dp"
        android:background="@drawable/b1"
        android:fontFamily="@font/futuralt"
        android:shadowColor="#809FA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_gravity="center_horizontal"
        android:shadowRadius="1"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="#90151616"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/bLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/or" />


    <TextView
        android:id="@+id/signtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:font="@font/futuralt"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/futuralt"
        android:text="If you don't have an account"
        android:textColor="#ffffff"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="525dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signtext"
        android:layout_gravity="center_horizontal"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/b1"
        android:font="@font/futuralt"
        android:fontFamily="@font/futuralt"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#90151616"
        android:textSize="20sp" />


</LinearLayout>