<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dingo.loginscreentryout.Login">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="663dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradient_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:contentDescription="@string/findhomies"
            app:srcCompat="@drawable/text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="17dp"
            android:font="@font/futuralt"
            android:text="Password"
            android:textColor="#416BC1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:font="@font/futuralt"
            android:text="@string/username"
            android:textColor="#416BC1"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@drawable/edit_color"
            android:ems="10"
            android:inputType="textPersonName"
            android:radius="35dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginTop="39dp"
            android:background="@drawable/edit_color"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bLogin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editText3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/buttonshape"
            android:font="@font/futuralt"
            android:onClick="onClick"
            android:shadowColor="#809FA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#416BC1"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/bLogin"
            android:layout_alignStart="@+id/bLogin"
            android:layout_below="@+id/bLogin"
            app:srcCompat="@drawable/or" />

        <Button
            android:id="@+id/fb"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:background="#416BC1"
            android:font="@font/futuralt"
            android:text="Sign Up with facebook"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="460dp" />


        <TextView
            android:id="@+id/signtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:font="@font/futuralt"
            android:text="If you don't have an account"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="525dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_below="@+id/signtext"
            android:layout_marginTop="14dp"
            android:background="@drawable/buttonshape"
            android:font="@font/futuralt"
            android:onClick="onClick"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#416BC1"
            android:textSize="17sp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>