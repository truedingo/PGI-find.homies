<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/im1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|left"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="Cria o teu anúncio"
            android:textColor="#8c404040"
            android:textSize="30sp" />
        />


        <TextView
            android:id="@+id/titlewhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="O que procuras?"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/what"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/titlewhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="Onde?"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/where"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/titleob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="Observações (opcional)"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ob"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/titleideal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="Homies ideais:"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ideal"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/criar"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/b1"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:onClick="onClick"
            android:text="criar anúncio"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#90151616"
            android:textSize="18sp"
            android:textStyle="normal" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>