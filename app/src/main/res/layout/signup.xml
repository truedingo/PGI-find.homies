<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c.e.dingo.find.SignUp"
>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="663dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/im1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            app:srcCompat="@drawable/text"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="22dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="confirm password"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:font="@font/futuralt"
            android:fontFamily="@font/futuralt"
            android:text="email"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/editText3"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/futuralt"
            android:text="password"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="270dp"
            android:textColor="#95666666"

            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:layout_below="@+id/textView3"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textPassword"
            android:radius="35dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="270dp"
            android:textColor="#95666666"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/bContinue"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editText5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:background="@drawable/b1"
            android:fontFamily="@font/futuralt"
            android:shadowColor="#809FA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:text="@string/Continue"
            android:textAllCaps="false"
            android:textColor="#b1696969"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="270dp"
            android:textColor="#95666666"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_below="@+id/textView1"
            android:background="@drawable/edit_color2"
            android:ems="10"
            android:inputType="textPassword" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>